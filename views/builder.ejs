<%- include('partials/header') -%>
  

<!-- search -->
<section class ="container mt-5 justify-content-center">
  <% if (keyIngredient) { %>
    <h4 class="container">New Search</h4>
  <% } %>
  <form action="/search" method="GET">
    <input type="search" name="search" id="search" placeholder="Enter an Ingredient">
  </form>
</section>

<% if (keyIngredient) { %>
  <h4 class= "container justify-content-center mt-5">Key Ingredient: <span id="keyIngredient"><%= keyIngredient %></span></h4>
    <h6><% if (pair) { %> + <%= pair %></h6><% } %>
      <!-- <form action="/pairings/createPairing" enctype="multipart/form-data" method="POST"> -->
        <div class="text-center">
          <button type="button" class="btn btn-primary btn-sm mt-1" value="Upload">Save</button></div>
      </form>
<% } %>

<div class="container">
    <div class="row justify-content-center mt-5">
      <% if (pairings) { %>
        <h6>Add a pairing:</h6>
      <% } %>
      <ul class="row list-unstyled">
          <% for(var i=0; i<pairings.length; i++) {%>
            <form action="/addPairing" enctype="multipart/form-data" method="GET">
              <li class="col-4 justify-content-between mt-1">
                <input type="submit" value="<%=pairings[i]%>" class="btn btn-light">
              </li>
            </form>
          <% } %>
          </ul>
      </div>
    </div>

<%- include('partials/footer') -%>
